# Terraform Variables
# Configure your deployment settings

# AWS Configuration
aws_region = "us-west-2"
environment = "staging"
project_name = "nexpo"

# Backend Feature Flags - Enable/Disable specific backends
enable_typescript_api = false  # TypeScript Express API (Port 8020)
enable_python_api = false  # Python FastAPI (Port 8030)
enable_go_api = false  # Go Beego API (Port 8040)
enable_rust_api = false  # Rust Actix API (Port 8050)
enable_scala_api = false  # Scala Play API (Port 8060)
enable_java_api = false  # Java Play API (Port 8070)
enable_r_api = false  # R Plumber API (Port 8080)
enable_julia_api = false  # Julia Genie API (Port 8090)

# Example: Enable only TypeScript and Python backends
# enable_typescript_api = true
# enable_python_api = true
