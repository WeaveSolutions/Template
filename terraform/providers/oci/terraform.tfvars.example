# OCI Provider Configuration Example

# OCI Authentication
tenancy_ocid     = "ocid1.tenancy.oc1..xxxxx"
user_ocid        = "ocid1.user.oc1..xxxxx"
fingerprint      = "xx:xx:xx:xx:xx:xx:xx:xx"
private_key_path = "~/.oci/oci_api_key.pem"
region           = "us-phoenix-1"

# Compartment
compartment_ocid = "ocid1.compartment.oc1..xxxxx"

# Project Configuration
project_name = "Nexpo"
environment  = "dev"

# Networking
vcn_cidr_block         = "10.0.0.0/16"
public_subnet_cidr     = "10.0.1.0/24"
private_subnet_cidr    = "10.0.2.0/24"
database_subnet_cidr   = "10.0.3.0/24"

# Kubernetes (OKE)
kubernetes_version      = "v1.28.2"
node_pool_size         = 3
node_pool_min_size     = 1
node_pool_max_size     = 5
node_shape             = "VM.Standard.E4.Flex"
node_ocpus             = 2
node_memory_in_gbs     = 16

# Container Registry
enable_container_registry = true
registry_compartment_name = "container-registry"

# Database
autonomous_db_name         = "appdb"
autonomous_db_display_name = "Application Database"
autonomous_db_version      = "19c"
autonomous_db_cpu_count    = 1
autonomous_db_storage_gb   = 20
autonomous_db_license      = "LICENSE_INCLUDED"

# Storage
object_storage_buckets = {
  assets = {
    name          = "assets"
    public_access = "ObjectRead"
    versioning    = true
  }
  backups = {
    name          = "backups"
    public_access = "NoPublicAccess"
    versioning    = false
  }
}

# Functions
enable_functions = true
function_shape   = "GENERIC_X86"

# Load Balancer
load_balancer_shape = "flexible"
load_balancer_min_bandwidth_mbps = 10
load_balancer_max_bandwidth_mbps = 100

# Auth0 Configuration
auth0_domain         = "your-tenant.auth0.com"
auth0_client_id      = "your-client-id"
auth0_client_secret  = "your-client-secret"
auth0_api_identifier = "https://your-app.com/api"

# Monitoring
enable_monitoring      = true
notification_topic     = "app-alerts"
notification_protocol  = "EMAIL"
notification_endpoint  = "alerts@your-domain.com"

# Security
enable_vault          = true
enable_bastion        = false
allowed_cidr_blocks   = ["0.0.0.0/0"]

# Tags
freeform_tags = {
  environment = "dev"
  project     = "Nexpo"
  managed_by  = "terraform"
}

defined_tags = {
  "Operations.CostCenter" = "Development"
  "Operations.Environment" = "Dev"
}
