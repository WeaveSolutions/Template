# Production Environment Variables
# Copy this file to terraform.tfvars and fill in your values

# Project Configuration
project_name = "Nexpo"
environment  = "prod"
aws_region   = "us-east-1"

# Domain Configuration
custom_domain       = "yourdomain.com"
acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxx-xxxx-xxxx"
route53_zone_id     = "Z1234567890ABC"

# Supabase Configuration
supabase_url      = "https://your-project.supabase.co"
supabase_anon_key = "your-supabase-anon-key"

# Auth0 Configuration (optional - remove if not using Auth0)
auth0_secret          = "your-auth0-secret"
auth0_issuer_base_url = "https://your-domain.auth0.com"
auth0_client_id       = "your-auth0-client-id"
auth0_client_secret   = "your-auth0-client-secret"

# Monitoring
alarm_email_endpoints = ["ops@yourdomain.com", "alerts@yourdomain.com"]
alarm_sms_endpoints   = ["+1234567890"] # Optional

# Budget
monthly_budget_limit = "500"
budget_alert_emails  = ["finance@yourdomain.com"]
