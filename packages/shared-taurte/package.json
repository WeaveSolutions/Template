{
  "name": "@taurte/shared",
  "version": "1.0.0",
  "description": "Shared Tauri Svelte components, stores, and utilities for cross-platform desktop and mobile development",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./components": "./src/components/index.ts",
    "./stores": "./src/stores/index.ts",
    "./utils": "./src/utils/index.ts",
    "./types": "./src/types/index.ts",
    "./constants": "./src/constants/index.ts",
    "./styles": "./src/styles/index.ts"
  },
  "files": [
    "src/**/*"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint src/**/*.{ts,svelte}",
    "format": "prettier --write src/**/*.{ts,svelte}"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.6.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-os": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-notification": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-http": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "tslib": "^2.7.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "tauri",
    "svelte",
    "cross-platform",
    "mobile",
    "desktop",
    "shared-components",
    "authentication",
    "stores"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexpo-org/nexpo.git",
    "directory": "packages/shared-tauri"
  },
  "license": "Apache-2.0",
  "private": true
}
