{
  "name": "@shared/db",
  "version": "0.1.0",
  "description": "Shared database access layer with Prisma for Nexpo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch --preserveWatchOutput",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean",
    "postinstall": "ts-node scripts/prisma-setup.ts",
    
    "db:provider": "node scripts/db-provider.ts",
    "db:generate": "node scripts/db-provider.ts generate",
    "db:migrate": "node scripts/db-provider.ts migrate $npm_config_provider $npm_config_name",
    "db:reset": "node scripts/db-provider.ts reset $npm_config_provider",
    "db:studio": "node scripts/db-provider.ts studio $npm_config_provider",
    "db:list": "node scripts/db-provider.ts list",
    

    "db:setup": "node scripts/prisma-setup.ts",
    "db:setup:provider": "node scripts/prisma-setup.ts",
    "db:generate:provider": "node scripts/prisma-setup.ts $npm_config_provider && prisma generate",
    "db:migrate:dev": "node scripts/prisma-setup.ts $npm_config_provider && prisma migrate dev",
    "db:migrate:deploy": "node scripts/prisma-setup.ts $npm_config_provider && prisma migrate deploy",
    "db:push": "node scripts/prisma-setup.ts $npm_config_provider && prisma db push",
    "db:seed": "node scripts/prisma-setup.ts $npm_config_provider && ts-node prisma/seed.ts",
    
    "prisma:generate": "pnpm run db:generate",
    "prisma:migrate:dev": "pnpm run db:migrate:dev",
    "prisma:migrate:deploy": "pnpm run db:migrate:deploy",
    "prisma:studio": "pnpm run db:studio",
    "prisma:db:push": "pnpm run db:push",
    "prisma:db:seed": "pnpm run db:seed",
    
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "mongodb": "^5.7.0",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.2",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@prisma/client": "^5.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
