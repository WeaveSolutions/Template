{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@repo/shared-hooks": ["./src/index.ts"],
      "@repo/shared-hooks/*": ["./src/*"],
      "@repo/shared-provider": ["../shared-provider/src/index.ts"],
      "@repo/shared-provider/*": ["../shared-provider/src/*"],
      "@repo/shared-utils": ["../shared-utils/src/index.ts"],
      "@repo/shared-utils/*": ["../shared-utils/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules/*",
    "**/__tests__/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
