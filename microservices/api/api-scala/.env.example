# Scala Play Framework API Backend Configuration

# Server Configuration
NODE_ENV=development
SCALA_API_PORT=7040
APPLICATION_SECRET=your-application-secret-key-here
PLAY_HTTP_SECRET_KEY=your-play-secret-key-here

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=https://api.nexpo.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# MindsDB Configuration
MINDSDB_URL=http://localhost:47334

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO

# Database Configuration (Optional)
DATABASE_URL=postgresql://localhost:5432/nexpo
DATABASE_USER=nexpo
DATABASE_PASSWORD=nexpo_password
