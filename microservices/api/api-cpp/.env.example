# C++ Drogon API Environment Configuration

# Server Configuration
PORT=7090
NODE_ENV=development
SERVICE_NAME=cpp-api

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nexpo_dev
REDIS_URL=redis://localhost:6379

# Authentication (Auth0)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=your-api-identifier
JWKS_URI=https://your-auth0-domain.auth0.com/.well-known/jwks.json

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api/v1/cpp

# Kong Gateway
KONG_PROXY_URL=http://localhost:8010
KONG_ADMIN_URL=http://localhost:8001

# PostHog Analytics
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Drogon Framework Configuration
DROGON_THREADS=4
DROGON_MAX_CONNECTIONS=1000
DROGON_SESSION_TIMEOUT=600
DROGON_DB_CONNECTION_NUMBER=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/cpp-api.log

# Development Features
ENABLE_CORS=true
ENABLE_SWAGGER=true
ENABLE_DEBUG=false
