# TypeScript Express API Configuration

# Server Configuration
PORT=7000
TS_API_PORT=7000
NODE_ENV=development
SERVICE_VERSION=1.0.0

# Auth0 Configuration (Required)
AUTH0_SECRET=your-auth0-secret-here
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_ISSUER_BASE_URL=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.cra.com
AUTH0_BASE_URL=http://localhost:7000

# Session Configuration
SESSION_SECRET=your-session-secret-here-min-32-chars

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Kong API Gateway Configuration
KONG_ADMIN_URL=http://localhost:8001
KONG_SERVICE_NAME=auth-service
KONG_ROUTE_PATH=/auth

# MindsDB Configuration
MINDSDB_URL=http://mindsdb:47334
MINDSDB_TIMEOUT=30

# OAuth Provider Feature Flags
ENABLE_GOOGLE_AUTH=true
ENABLE_FACEBOOK_AUTH=false
ENABLE_APPLE_AUTH=false
ENABLE_GITHUB_AUTH=true
ENABLE_MICROSOFT_AUTH=false

# Authentication Feature Flags
ENABLE_PASSWORDLESS_EMAIL=true
ENABLE_PASSWORDLESS_SMS=false
ENABLE_PASSKEYS=true

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_MAX_AGE=86400

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

# Vault Configuration (Optional)
VAULT_ENABLED=false
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_SECRET_PATH=secret/data/auth

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_AUDIT_LOGGING=true
AUDIT_RETENTION_DAYS=3653

# Database Configuration (For audit trails)
DATABASE_URL=postgresql://user:password@localhost:5432/cra_auth

# Redis Configuration (For sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=cra:session:
REDIS_CACHE_TTL=3600

# Compliance Configuration
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=3653

# Development Configuration
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false
