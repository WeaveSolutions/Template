{
  "name": "@nexpo/tauri",
  "version": "1.0.0",
  "type": "module",
  "description": "Nexpo Tauri Desktop Application - Consolidated Architecture with Svelte Primary + Next.js Secondary",
  "private": true,
  "scripts": {
    "dev": "pnpm dev:svelte-mode",
    "desktop": "pnpm dev:next-mode",
    "dev:svelte-mode": "cross-env TAURI_MODE=svelte pnpm exec vite dev & tauri dev",
    "dev:next-mode": "concurrently \"cd ../nexpo/nextWeb && pnpm dev\" \"pnpm exec tauri dev\"",
    "dev:next": "cd ../nexpo/nextWeb && pnpm dev",
    "dev:vite": "pnpm exec vite dev",
    "dev:tauri:next": "cross-env TAURI_DEV_PATH=http://localhost:3000 TAURI_DIST_DIR=../../nexpo/nextWeb/out tauri dev",
    "build": "pnpm build:svelte-mode",
    "build:svelte-mode": "cross-env TAURI_MODE=svelte vite build && tauri build",
    "build:next-mode": "pnpm build:next && cross-env TAURI_MODE=nextjs tauri build",
    "build:next": "cd ../nexpo/nextWeb && cross-env NEXT_OUTPUT=export pnpm build",
    "build:svelte": "pnpm exec vite build",
    "build:tauri": "tauri build",
    "tauri": "tauri",
    "clean": "rimraf src-tauri/target dist"
  },
  "dependencies": {
    "@nexpo/shared-components": "workspace:*",
    "@nexpo/shared-ui": "workspace:*",
    "@nexpo/shared-utils": "workspace:*",
    "@nexpo/shared-provider": "workspace:*",
    "@nexpo/shared-fonts": "workspace:*",
    "@taurte/shared": "workspace:*",
    "@tauri-apps/api": "^2.6.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-os": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-notification": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-http": "^2.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tauri-apps/cli": "^2.6.0",
    "@tsconfig/svelte": "^5.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.11",
    "tslib": "^2.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}
